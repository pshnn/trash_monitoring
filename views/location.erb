<h1>Location page</h1>

<div class="js-location" data-latitude="<%= location.latitude %>" data-longitude="<%= location.longitude %>">
  <p>Latitude: <%= location.latitude %></p>
  <p>Longitude: <%= location.longitude %></p>
</div>

<div>
  <a href="<%= edit_location_path %>">Edit</a>
</div>

<div>
  <form
    action="<%= delete_location_path %>"
    method="post"
    class="js-delete-location"
  >
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>
</div>

<div id='map' style='width: 100%; height: 650px;'></div>

<script type="module" src="location.js"></script>
